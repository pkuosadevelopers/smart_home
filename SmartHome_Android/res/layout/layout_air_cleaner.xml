<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_air_cleaner_hello"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_air_cleaner_hello" />
    
    <TextView
        android:id="@+id/tv_air_cleaner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tv_air_cleaner"/>
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    <Button
	        android:id="@+id/btn_air_cleaner_open"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/btn_air_cleaner_open"/>
	    
	    <Button
	        android:id="@+id/btn_air_cleaner_close"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/btn_air_cleaner_open"/>
    </LinearLayout>
    
</LinearLayout>