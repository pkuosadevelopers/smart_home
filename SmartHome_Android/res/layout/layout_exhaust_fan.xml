<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_exhaust_fan_hello"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_exhaust_fan_hello" />
    
    <TextView
        android:id="@+id/tv_exhaust_fan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tv_exhaust_fan"/>
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    <Button
	        android:id="@+id/btn_exhaust_fan_open"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/btn_exhaust_fan_open"/>
	    
	    <Button
	        android:id="@+id/btn_exhaust_fan_close"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/btn_exhaust_fan_open"/>
    </LinearLayout>
    
</LinearLayout>